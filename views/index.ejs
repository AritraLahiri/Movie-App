                    <li>Upload at : <%=ele.time %></li>
                  </div>
                </div>
              </a>
            </div>
          </div>
          <% }) %>
        </div>
      </div>
    </section>
    <!-- ENGLISH-Movie Section End -->

    <!-- BENGALI-Movie Section Starts -->
    <section class="bengali" id="bengaliid">
      <div class="container bollywood-heading text-center">
        <h1 class="text-center text-uppercase">bengali movies</h1>
      </div>
      <div class="container">
        <div class="row">
          <% movie.bengali.forEach(ele=>{%>
          <div class="col-lg-4 col-12">
            <div class="card">
              <a href="/movie/show/<%=ele.title%>" class="movie-link">
                <div class="card-body">
                  <h3 class="card-title text-center"><%=ele.title%></h3>
                  <div class="card-text">
                    <li>Total Seeds : <span class="count"><%=ele.seeds %></span></li>
                    <li>Total Peers : <span class="count"><%=ele.peers %></span></li>
                    <li>Total Size : <%=ele.size %> </li>
                    <li>Upload at : <%=ele.time %></li>

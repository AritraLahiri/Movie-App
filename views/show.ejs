<%-include("./partial/header") %>
<div class="container header-show">
    <!-- card here -->
    <div class="card-show">
        <% movie.forEach(ele=>{ %>
        <div class="card-body">
            <h3 class="card-title text-center"><%=ele.title%></h3>
